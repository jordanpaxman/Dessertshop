#:kivy 1.0
WindowManager:
    ItemSelection:
    CandyWindow:
    CookieWindow:
    IceCreamWindow:
    SundaeWindow:
    CustomerWindow:
    OrderAgainWindow:
    ThankYouWindow:
    


<ItemSelection>
    name: 'itemselection'
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 40
            
        Label: 
            text: "What would you like to add to the order?"
            font_size: 45

        Button:
            text: "Candy"
            id:candy
            font_size: 40
            on_release: 
                app.root.current = 'candywindow'
                root.manager.transition.direction = 'left'

        Button:
            text: "Cookie"
            id:cookie
            font_size: 40
            on_release: 
                app.root.current = 'cookiewindow'
                root.manager.transition.direction = 'left'
        Button:
            text: "Ice Cream"
            id:icecream
            font_size: 40
            on_release: 
                app.root.current = 'icecreamwindow'
                root.manager.transition.direction = 'left'
        Button:
            text: "Sundae"
            id:sundae
            font_size: 40
            on_release: 
                app.root.current = 'sundaewindow'
                root.manager.transition.direction = 'left'
        Button:
            text: "Complete Order"
            id:complete
            font_size: 30
            on_release: 
                app.root.current = 'customerwindow'
                root.manager.transition.direction = 'left'


<CandyWindow>
#each dessert window needs to be capable of creating a dessert instance and adding it to an order. 
    name: "candywindow"
    dessert: dessert
    quantity: quantity
    price: price 
    GridLayout:
       
        
        cols: 2

        Label: 
            text: 'Enter Candy Name'
            font_size: 32
        TextInput:
            id: dessert
            multiline: False
        Label: 
            text: 'Enter Candy Weight'
            font_size: 32
        TextInput:
            id: quantity
            multiline: False
        Label: 
            text: 'Enter Price per Pound'
            font_size: 32
        TextInput:
            id: price
            multiline: False

        Button:
            text: 'Go Back'
            font_size: 32
            on_release: 
                app.root.current = 'itemselection'
                root.manager.transition.direction = 'right'
                root.clear_text()
        Button:
            text: 'Add Item'
            font_size: 32
            on_release: 
            #   needs to add item to order
                root.add_item()
                app.root.current = 'itemselection'
                root.manager.transition.direction = 'right'
                


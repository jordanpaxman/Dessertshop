<CustomerWindow>
    name: "customerwindow"
    customer_name: customer_name
    cash: cash
    card: card
    phone: phone
    BoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 40
        
        Label:
            text: "Enter Customer's Name"
        
        TextInput:
            id: customer_name
            multiline: False
            #on enter text input go to payment 
        Label:
            text: "Select Payment Type"
        Button:
            id: cash
            text: "Cash"
            on_release:
                root.update_pay(cash)
        Button:
            id: card
            text: "Card"
            on_release: 
                root.update_pay(card)
        Button:
            id: phone
            text: "Phone"
            on_release:
                root.update_pay(phone)
        Label:

            text: 
        BoxLayout:
            padding: 30
            spacing: 40
            orientation: 'horizontal'
        
            Button:
                text: 'Go Back'
                font_size: 32
                on_release: 
                    app.root.current = 'itemselection'
                    root.manager.transition.direction = 'right'
                    root.clear_text()

            Button:
                text: 'Complete Order'
                font_size: 32
                on_release: 
                #change to thank you screen and would you like to add another order?
                    app.root.current = 'orderagain'
                    root.manager.transition.direction = 'left'
                    root.check_customer()

<OrderAgainWindow>
    name: 'orderagain'
    yes: yes
    no: no
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: thankyou
            text: "Thank you! Would you like to add another order?"
        Button:
            id: yes
            text: 'Yes'
            on_release: 
                app.root.current = 'itemselection'
                root.manager.transition.direction = 'left'
                root.new_order()

        Button:
            id: no
            text: 'No'
            on_release: 
                app.root.current = 'comeagain'
                root.print_receipts()


<ThankYouWindow>
    name: 'comeagain'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id:thank you
            text: "Come Again Soon!"
            font_size: 60
                
            
        
        
                






